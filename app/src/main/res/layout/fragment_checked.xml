<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/checked_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="411dp"
            android:layout_height="832dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/background_splash"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="362dp"
            android:layout_height="525dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/rounded_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.221" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="220dp"
            android:layout_height="229dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/sent_checkmark"
            app:layout_constraintStart_toStartOf="@+id/imageView11"
            app:layout_constraintEnd_toEndOf="@+id/imageView11"
            app:layout_constraintTop_toTopOf="@+id/imageView11"
            app:layout_constraintBottom_toBottomOf="@+id/imageView11"
            app:layout_constraintVertical_bias="0.143"
            app:layout_constraintHorizontal_bias="0.496" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="221dp"
            android:layout_height="96dp"
            android:gravity="center"
            android:text="¡Contraseña Cambiada!"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="@+id/imageView11"
            app:layout_constraintEnd_toEndOf="@+id/imageView11"
            app:layout_constraintTop_toBottomOf="@+id/imageView12"
            app:layout_constraintBottom_toBottomOf="@+id/imageView11"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.496"
            android:layout_marginTop="28dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/backToStart"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:background="@drawable/gradient"
            android:backgroundTint="@null"
            android:backgroundTintMode="@null"
            android:text="Regresar al Inicio"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            app:layout_constraintStart_toStartOf="@+id/imageView11"
            app:layout_constraintEnd_toEndOf="@+id/imageView11"
            app:layout_constraintTop_toBottomOf="@+id/textView14"
            app:layout_constraintBottom_toBottomOf="@+id/imageView11"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.49"
            android:layout_margin="36dp"
            android:layout_marginTop="36dp"
            android:layout_gravity="center" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
